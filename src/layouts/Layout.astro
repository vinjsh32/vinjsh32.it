---
import { SEO } from 'astro-seo';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/700.css';
import '@fontsource/playfair-display/400.css';
import '@fontsource/playfair-display/700.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { 
  title = "vinjsh32 | Photographer from Capri, Italy",
  description = "Portfolio di Vincenzo, fotografo di Capri specializzato in paesaggi, ritratti e street photography.",
  image = "/images/og-image.jpg"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: image,
        },
        optional: {
          siteName: "vinjsh32 Photography",
          description: description,
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@vinjsh32",
        title: title,
        description: description,
        image: image,
      }}
    />
  </head>
  <body class="bg-white dark:bg-dark-800 text-dark-800 dark:text-white min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --font-sans: 'Inter', system-ui, sans-serif;
    --font-display: 'Playfair Display', serif;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-sans);
    line-height: 1.5;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-display);
    line-height: 1.2;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .container {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }

  .slide-up {
    animation: slideUp 0.5s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from { transform: translateY(20px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }
</style>